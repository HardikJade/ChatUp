<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginCredits.GetOTP">

    <View
        android:id="@+id/opt_up_cir_item_1"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/sign_up_cir_bg"
        app:layout_constraintBottom_toTopOf="@+id/otp_up_cir_item_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/otp_up_cir_item_2"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/sign_up_cir_bg_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opt_up_cir_item_1"
        app:layout_constraintVertical_bias="0.78" />

    <LinearLayout
        android:id="@+id/otp_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:alpha="1"
        android:background="@drawable/phone_form_white_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/otp_form_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:alpha="1"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Enter OTP"
            android:textColor="#090909"
            android:textSize="20sp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <EditText
                android:id="@+id/otp_1"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:inputType="number" />

            <EditText
                android:id="@+id/otp_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:inputType="number" />

            <EditText
                android:id="@+id/otp_3"
                android:layout_width="45dp"
                android:gravity="center"

                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:ems="10"
                android:inputType="number"

                />

            <EditText
                android:id="@+id/otp_4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:gravity="center"


                android:ems="10"
                android:inputType="number" />


        </LinearLayout>

        <Button
            android:id="@+id/submit_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="1"
            android:fontFamily="@font/poppins"
            android:text="Submit OTP"
            android:textAllCaps="false"
            android:textColor="#F4F3F3"
            android:textSize="15sp"
            app:backgroundTint="#516091"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/phone_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Not Recieved? Resend" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>